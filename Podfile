workspace 'BluetoothCentral.xcworkspace'

target 'BluetoothCentral-iOS' do
  platform :ios, '9.0'
  use_frameworks!

  pod 'ObservationLite'

end

target 'BluetoothCentral-macOS' do
  platform :macos, '10.13'
  use_frameworks!

  pod 'ObservationLite'

end

target 'BluetoothCentral-tvOS' do
  platform :tvos, '10.0'
  use_frameworks!

  pod 'ObservationLite'

end

target 'BluetoothCentral-watchOS' do
  platform :watchos, '3.0'
  use_frameworks!

  pod 'ObservationLite'

end

target 'Demo-iOS' do
  project 'Demo/Demo.xcodeproj'
  platform :ios, '10.0'
  use_frameworks!

  pod 'ObservationLite'
  pod 'BluetoothCentral', :path => './'

end
